<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.khl.assignment2.MainActivity" >

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/AddExpenseTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ea974e"
            android:gravity="center"
            android:text="@string/add_expense_title"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groupsLayout"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/groupsLayout"
        android:orientation="vertical" android:id="@+id/linearLayout1">
    </LinearLayout>

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleLayout"
        android:layout_below="@+id/titleLayout"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="@string/placeholder_amount"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description"
        android:layout_below="@+id/description"
        android:layout_toLeftOf="@+id/addBtn" />

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amount"
        android:layout_alignRight="@+id/amount"
        android:layout_below="@+id/type"
        android:ems="10"
        android:hint="@string/placeholder_description"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amount"
        android:layout_alignRight="@+id/description"
        android:layout_below="@+id/amount"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/placeholder_type_expense" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/amount"
        android:layout_marginBottom="38dp"
        android:background="@drawable/addbtn_selector"
        android:onClick="addExpense" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addBtn"
        android:layout_alignBottom="@+id/addBtn"
        android:layout_alignLeft="@+id/description"
        android:background="@drawable/button_selector"
        android:onClick="cancel"
        android:text="@string/cancel"
        android:textColor="#FFFF" />

</RelativeLayout>